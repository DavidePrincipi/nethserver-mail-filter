#
# 30clamd -- virus check is { $virus_check_status ? 'enabled' : 'disabled' }
#

@av_scanners = ({
    if($virus_check_status) {
	$OUT = q(
  ['ClamAV-clamd',                   
    \&ask_daemon, ["CONTSCAN \{\}\n", "/var/run/clamav/clamd.sock"],
    qr/\bOK$/, qr/\bFOUND$/,
    qr/^.*?: (?!Infected Archive)(.*) FOUND$/m ]
);
    } else {
	$OUT = '';
    }
});


