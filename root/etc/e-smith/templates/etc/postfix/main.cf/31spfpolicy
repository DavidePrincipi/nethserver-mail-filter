    if($postfix{SpfStatus} eq 'enabled') {
	@smtpd_recipient_restrictions = map {
	    $_ eq 'reject_unauth_destination' ?
		($_, 'check_policy_service unix:private/spfpolicy') :
		$_
	} @smtpd_recipient_restrictions; 
    }
    '';
}
